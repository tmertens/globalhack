<%= form_for(help) do |f| %>
  <% if help.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(help.errors.count, "error") %> prohibited this help from being saved:</h2>

      <ul>
      <% help.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :help_type, value: params[:help_type] %>

  <div class="field">
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
  </div>

  <div class="field">
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
  </div>

  <div class="field">
    <%= f.label :gender %>
    <%= f.select :gender, Help.genders.keys %>
  </div>

  <div class="field">
    <%= f.label :dependents %>
    <%= f.check_box :dependents %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
