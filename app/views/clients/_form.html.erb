<%= form_for @client, html: { multipart: true, class: 'form-horizontal' } do |f| %>
  <div class="field form-group">
    <div class="col-sm-10">
      <%= f.text_field :informal_name, placeholder: 'Change Username' %>
    </div>
  </div>

  <div class="btn btn-default">
    <div class="col-sm-10">
      <%= f.file_field :avatar %>
    </div>
  </div>

  <div class="btn btn-default">
      <%= f.submit 'Update Profile'%>
  </div>
<% end %>
